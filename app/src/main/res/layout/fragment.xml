<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border">
    <android.support.constraint.Guideline
        android:id="@+id/guide_half_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_half_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_75_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_half_vertical"
        tools:text="Music"/>
    <TextView
        android:id="@+id/audio_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_half_vertical"
        tools:text="Playing..."/>
    <Button
        android:id="@+id/gain_focus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guide_half_horizontal"
        app:layout_constraintTop_toBottomOf="@id/guide_half_vertical"
        app:layout_constraintBottom_toBottomOf="@id/guide_75_vertical"
        android:textSize="12dp"
        android:text="Gain Focus"/>
    <Button
        android:id="@+id/gain_focus_transient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/guide_half_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_half_vertical"
        app:layout_constraintBottom_toBottomOf="@id/guide_75_vertical"
        android:textSize="12dp"
        android:text="Gain Focus Transient"/>
    <Button
        android:id="@+id/gain_focus_may_duck"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guide_half_horizontal"
        app:layout_constraintTop_toBottomOf="@id/guide_75_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12dp"
        android:text="Gain Focus May Duck"/>
    <Button
        android:id="@+id/abandon_focus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/guide_half_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_75_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12dp"
        android:text="Abandon focus"/>
</android.support.constraint.ConstraintLayout>